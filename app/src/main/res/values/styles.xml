<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!--
        Force using the old-school spinner picker,
        the new calender view is so stupid that no one knows how to change year.
         -->
        <item name="android:datePickerStyle">@style/ForceSpinnerDatePicker</item>
    </style>

    <style name="ForceSpinnerDatePicker" parent="android:Widget.DatePicker">
        <!-- This is the style for API < 21 which uses spinner by default. Nothing needs to be done here. -->
    </style>

</resources>
